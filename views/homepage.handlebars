{{#each posts as |post| }}
<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
    </div>
    <div class="col-md-7">
        <p>
            {{project.description}}
        </p>
    </div>
    <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
</div>
{{/each}}